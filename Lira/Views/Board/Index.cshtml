@model IEnumerable<Lira.Models.Board>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .board-item {
        background: #EBECF0;
          border-radius: 2rem;
          padding: 1rem;
          padding-left: 3rem;
          padding-right: 3rem;
          margin: 1rem;
          display: flex;
    }
</style>

<h1>Your boards</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@foreach (var item in Model)
    {
        <div class="board-item">
            <div style="width: 100%">
                <h5>@Html.DisplayFor(modelItem => item.Name)</h5>
            </div>
            <div>
                <div style="white-space: nowrap">
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                </div>

            </div>
        </div>
    }